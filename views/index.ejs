<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <style>
            body {
                font-family: Arial, Helvetica, sans-serif;
                background-color: white;
            }

            * {
                box-sizing: border-box;
            }

            /* Add padding to containers */
            .container {
                padding: 16px;
                margin-left: auto;
                margin-right: auto;
                width: 50%;
                text-align: center;
                background-color: white;
            }

            /* Full-width input fields */
            input[type=text] {
                width: 50%;
                padding: 15px;
                margin: 5px 0 22px 0;
                display: inline-block;
                border: none;
                background: #f1f1f1;
            }

            input[type=text]:focus {
                background-color: #ddd;
                outline: none;
            }

            /* Overwrite default styles of hr */
            hr {
                border: 1px solid #f1f1f1;
                margin-bottom: 25px;
            }

            /* Set a style for the submit button */
            .submitBtn {
                background-color: #4CAF50;
                color: white;
                padding: 16px 20px;
                margin: 8px 0;
                border: none;
                cursor: pointer;
                width: 100%;
                opacity: 0.9;
            }

            .submitBtn:hover {
                opacity: 1;
            }

            .taskSucessBlock {
                display: block;
                width: 100%;
                padding: 10px;
                color: white;
                background-color: teal;
                text-align: center;
                font-weight: bold;
            }

            .taskFailedBlock {
                display: block;
                width: 100%;
                padding: 10px;
                color: white;
                background-color: red;
                text-align: center;
                font-weight: bold;
            }

            .loader {
                    font-size: 10px;
                    margin: 50px auto;
                    text-indent: -9999em;
                    width: 11em;
                    height: 11em;
                    border-radius: 50%;
                    background: #bb3e3e;
                    background: -moz-linear-gradient(left, #bb3e3e 10%, rgba(187,62,62, 0) 42%);
                    background: -webkit-linear-gradient(left, #bb3e3e 10%, rgba(187,62,62, 0) 42%);
                    background: -o-linear-gradient(left, #bb3e3e 10%, rgba(187,62,62, 0) 42%);
                    background: -ms-linear-gradient(left, #bb3e3e 10%, rgba(187,62,62, 0) 42%);
                    background: linear-gradient(to right, #bb3e3e 10%, rgba(187,62,62, 0) 42%);
                    position: relative;
                    -webkit-animation: load3 1.4s infinite linear;
                    animation: load3 1.4s infinite linear;
                    -webkit-transform: translateZ(0);
                    -ms-transform: translateZ(0);
                    transform: translateZ(0);
            }
            .loader:before {
                width: 50%;
                height: 50%;
                background: #bb3e3e;
                border-radius: 100% 0 0 0;
                position: absolute;
                top: 0;
                left: 0;
                content: '';
            }
            .loader:after {
                background: #f7f7f7;
                width: 75%;
                height: 75%;
                border-radius: 50%;
                content: '';
                margin: auto;
                position: absolute;
                top: 0;
                left: 0;
                bottom: 0;
                right: 0;
            }
            @-webkit-keyframes load3 {
            0% {
                -webkit-transform: rotate(0deg);
                transform: rotate(0deg);
            }
            100% {
                -webkit-transform: rotate(360deg);
                transform: rotate(360deg);
            }
            }
            @keyframes load3 {
                0% {
                    -webkit-transform: rotate(0deg);
                    transform: rotate(0deg);
                }
                100% {
                    -webkit-transform: rotate(360deg);
                    transform: rotate(360deg);
                }
            }
        </style>
    </head>
    <body>
        <div class="container">
            <h1>Email Warmer</h1>
            <hr>

            <input type="file" id='fileUpload' name="file" />
            <hr>
            
            <input type="submit" class="submitBtn" value="Submit!" onclick="uploadFormData()">
        </div>

        <!-- <div id='loading' style="display:none" >
            <div class="loader">Loading...</div>
        </div> -->

        <div id='taskCreated' class="taskSucessBlock" style="display:none" >
            Task Created
        </div>

        <div id='taskFailed' class="taskFailedBlock" style="display:none" >
            Task Failed
        </div>

        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script>

            async function uploadFormData() {
                document.getElementById('taskCreated').style.display = 'none';
                document.getElementById('taskFailed').style.display = 'none';

                let formData = new FormData();
                let fileData = document.querySelector('input[type="file"]');
                formData.append('file', fileData.files[0]);

                try {
                    let response = await axios.post('/email/markRead', formData);
                    document.getElementById('taskCreated').style.display = 'block';
                    document.getElementById("fileUpload").value = "";
                } catch (e) {
                    console.log(e);
                    document.getElementById('taskFailed').style.display = 'block';
                    document.getElementById("fileUpload").value = "";
                }
            }

        </script>
    </body>
</html>